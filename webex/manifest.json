{
  "name": "Textern",
  "description": "Edit text in your favourite external editor!",
  "homepage_url": "https://github.com/jlebon/textern",
  "manifest_version": 2,
  "version": "0.3",

  "applications": {
    "gecko": {
      "id": "textern@jlebon.com",
      "strict_min_version": "53.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],

  "options_ui": {
      "page": "options.html"
  },

  "commands": {
    "edit": {
      "suggested_key": { "default": "Ctrl+Shift+E" },
      "description": "Edit textbox in external editor"
    }
  },

  "permissions": ["notifications", "nativeMessaging", "storage"]
}
